{
  "manifest_version": 3,
  "name": "AI绘画提示词管理器",
  "version": "1.0.0",
  "description": "管理和使用AI绘画提示词,支持飞书表格同步",
  "permissions": ["storage", "alarms", "sidePanel"],
  "host_permissions": ["https://open.feishu.cn/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle_sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "打开/关闭侧边栏"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
